@model IEnumerable<PHS.DB.FollowUpGroup> 


@if (Model != null && Model.Count() > 0)
{
    foreach (var fugroup in Model)
    {
            <div style="float:right;">
                <button class="btn btn-primary" type="button" id="attach" value="@fugroup.FollowUpGroupID">Attach File</button>
                <button class="btn btn-primary" type="button" id="print" value="@fugroup.FollowUpGroupID">Print</button>
                <button class="btn btn-primary" type="button" id="importcaller" value="@fugroup.FollowUpGroupID">Import Caller</button>
                <input id="file-input" type="file" name="name" style="display: none;" accept=".xls"/>
            </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <caption> @fugroup.Title </caption>
            @if (fugroup.ParticipantCallerMappings != null && fugroup.ParticipantCallerMappings.Count > 0)
            {
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("NRIC")
                    </th>
                    <th>
                        @Html.DisplayName("Salutation")
                    </th>
                    <th>
                        @Html.DisplayName("FullName")
                    </th>
                    <th>
                        @Html.DisplayName("Language")
                    </th>
                    <th>
                        @Html.DisplayName("Contact")
                    </th>
                    <th>
                        @Html.DisplayName("Follow-up Volunteer")
                    </th>
                    <th>
                        @Html.DisplayName("Committee Member")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in fugroup.ParticipantCallerMappings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Participant.Nric)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Participant.Salutation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Participant.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Participant.Language)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Participant.MobileNumber)
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            @Html.ActionLink(
                              "View",
                              "ViewDetails",
                              "FollowUpMgmt",
                              new { participantID = item.ParticipantID })
                                </td>
                            </tr>
                }
            </tbody>
            }
        </table>
    </div>
    }
}
else
{
    <div>No Followup groups found!!</div>
}
<script>
    $("#print").click(function () {
        var configurationid = $(this).val();
        $.ajax({
            url: "@Url.Action("PrintHealthReportByFollowUpGroup", "FollowUpMgmt")",
            data: { followupconfigurationid: configurationid },
            type: "POST",
            error: function (response) {
                alert("Error encountered while printing!!");
            },
            success: function (response) {
                alert(response.Success);
            }
        });
    });

    $("#importcaller").click(function () {
        var configurationid = $(this).val();
        $('#file-input').trigger('click');
    });
    $("#file-input").change(function () {
        var test = $('#file-input')[0].files[0].name;
        alert(test);
        $.ajax({
            url: "@Url.Action("PrintHealthReportByFollowUpGroup", "FollowUpMgmt")",
            data: { followupconfigurationid: configurationid },
            type: "POST",
            beforeSend: function () {
                $("#output").html("Uploading, please wait....");
            },
            success: function () {
                $("#output").html("Upload success.");
            },
            complete: function () {
                $("#output").html("upload complete.");
            },
            error: function () {
                alert("ERROR in upload");
            }
        });
    });
</script>
