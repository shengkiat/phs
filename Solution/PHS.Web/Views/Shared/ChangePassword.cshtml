@{
    ViewBag.Title = "Change Password";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

@Html.Partial("_MessageBoxPartial")

<h2 class="text-center" style="margin-top:10%">Change Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group" style="margin-left:25%">
            <label class="control-label col-md-2">Old Password</label>
            <div class="col-md-10">
                <input type="password" name="oldPass" class="form-control" />
            </div>
        </div>
        <div class="form-group" style="margin-left:25%">
            <label class="control-label col-md-2">New Password</label>
            <div class="col-md-10">
                <input type="password" name="newPass" class="form-control" />
            </div>
        </div>
        <div class="form-group" style="margin-left:25%">
            <label class="control-label col-md-2">Confirm New Password</label>
            <div class="col-md-10">
                <input type="password" name="newPassConfirm" class="form-control" />
            </div>
        </div>


        <div class="form-group col-lg-offset-10">
            <div class="text-center">
                <input type="submit" value="Save" class="btn btn-primary btn-lg has-spinner" style="width:400px" />
            </div>
        </div>
    </div>
}

