@model PHS.Business.ViewModel.PatientSearchModel
@using PHS.FormBuilder.Helpers
@using PHS.FormBuilder.Extensions

@{
    ViewBag.Title = "Search Participant Page";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="text-center">
                <div>
                    <select name="FirstDigit">
                        <option>S</option>
                    </select>
                    @Html.EditorFor(model => model.Nric, new { htmlAttributes = new { @autocomplete = "off", @onkeypress = "return event.charCode >= 48 && event.charCode <= 57", maxlength = "7" } })
                    @Html.DropDownList("LastDigit", ItemListHelper.NricLastDigit().InsertAtStart(""), new { @class = "shorter-field birth-year" })
                    <button type="submit" value="SearchPatient" class="btn btn-primary btn-lg has-spinner" style="width:100px" id="BtnSearchUser">
                        <span class="spinner"><i class="icon-spin icon-refresh"></i></span>
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    
}
