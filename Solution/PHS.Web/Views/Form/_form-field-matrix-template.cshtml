
@using PHS.Common
@using PHS.Business.Extensions

<script id="form-field-matrix-template" type="text/x-jquery-tmpl">
    <label style="width: 70%; word-wrap: break-word; text-align: left;"
           data-sub-channel="sub-label-${id}" class="label editable">
        Click to edit
    </label>

    <span class="required hidden">*</span>

    <div class="input" style="width: 80%;">

        <table class="matrix-list">
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
            </tr>
        </table>

        <ul class="option-list vertical-list">

        </ul>
        @Html.Partial("_FormFieldPropertiesTemplatePartial")
    </div>
    <a href="javascript:void(0);" class="help-icon-1 help-icon hide w-tip">
        <img src="@Html.SpacerImage()" alt="help" />
    </a>
    @Html.Partial("_FormFieldSettingsPartial")
</script>