
@using PHS.Common
@using PHS.Business.Extensions

<script id="form-field-signature-template" type="text/x-jquery-tmpl">

    <p style="width: 90%; word-wrap: break-word; text-align: left;"
       data-sub-channel="sub-label-${id}"
       class="label editablewysiwyg">Click to edit</p>

    <span class="required hidden">*</span>

    <div class="input" style="width: 70%; margin-left: 1cm;">
        <div id="signature-pad" class="m-signature-pad">
            <div class="m-signature-pad--body">
                <canvas></canvas>
            </div>
            <div class="m-signature-pad--footer">
                <div class="description">Sign above</div>
                <button type="button" class="button clear" data-action="clear">Clear</button>
            </div>
        </div>
        @Html.Partial("_form-field-properties")
    </div>
    <a href="javascript:void(0);" class="help-icon-1 help-icon hide w-tip">
        <img src="@Html.SpacerImage()" alt="help" />
    </a>
    @Html.Partial("_FormFieldSettingsPartial")
</script>