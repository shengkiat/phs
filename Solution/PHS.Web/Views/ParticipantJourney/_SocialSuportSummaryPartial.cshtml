@model PHS.Business.ViewModel.ParticipantJourney.ParticipantJourneyFormViewModel

@using PHS.Business.Extensions
@using PHS.DB
@using System.Collections.Generic;
@using GridMvc.Html
@using System.Text.RegularExpressions

@{
    ViewBag.Title = "_SocialSupportSummaryPartial";
}

<script>
    function updateHeight() {
        var obj = parent.document.getElementById("form-builder-frame-44");
        if (obj) {
            setTimeout(function () {
                parent.resizeIframe(obj);
            }, 200);
        }
    }
</script>

<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />

<script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"> </script>


@using (Html.BeginForm())
{
    <div>
        <br />

        <div class="panel panel-default">
            @if (Model != null)
            {
                for (int indx = 0; indx < Model.GetSummaryCategories("SOCIAL_SUM").Count; indx++)
                {
                    var summaryCategory = Model.GetSummaryCategories("SOCIAL_SUM").ElementAt(indx);
                    <div class="panel-heading">
                        @if (summaryCategory.Summaries != null
                                && summaryCategory.Summaries.Count > 0
                            )
                        {
                            <a data-toggle="collapse" href="#target_@indx" onclick="updateHeight()"><b>@summaryCategory.SummaryCategoryName</b></a>
                        }
                        else
                        {
                            <a data-toggle="collapse" href="#target_@indx"><b>@summaryCategory.SummaryCategoryName</b> - No Summary Values in this Section</a>
                        }
                    </div>

                    if (summaryCategory.Summaries != null
                        && summaryCategory.Summaries.Count > 0
                    )
                    {
                        <div class="panel-body collapse" id="target_@indx">

                            <ul class="vertical-list">
                                @foreach (var summary in summaryCategory.Summaries)
                                {
                                    <li style="margin-bottom: 1em;">
                                        <b> @Regex.Replace(@summary.SummaryLabel, @"<[^>]+>|&nbsp;", "")</b><br />
                                        <span class="LabelForsub-label">@summary.SummaryValue</span>
                                        @if (summary.Result != null && summary.Result.Length > 0)
                                        {
                                            if (summary.Highlight)
                                            {
                                                <span class="LabelForsub-label" style="color:red;">(@summary.Result)</span>
                                            }
                                            else
                                            {
                                                <span class="LabelForsub-label">(@summary.Result)</span>
                                            }
                                        }
                                    </li>
                                }
                            </ul>

                        </div>
                    }

                    <br />
                }

            }
        </div>

    </div>
}

