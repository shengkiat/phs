@using PHS.FormBuilder.Helpers
@using PHS.Common
@using PHS.FormBuilder.Extensions


<script id="form-field-bmi-template" type="text/x-jquery-tmpl">
    <label data-sub-channel="sub-label-${id}" class="label editable">Click to edit</label>
    <span class="required hidden">*</span>
    <div class="input">
        <ul class="vertical-list">

            <li>
                <input type="text" class="title" id="Weight" /><br />
                <span class="sub-label">Weight (kg)</span>
            </li>

            <li>
                <input type="text" class="title" id="Height" /><br />
                <span class="sub-label">Height (cm)</span>
            </li>

            <li>
                <button type="button" id="btnSubmit">Search</button>
            </li>


            <li>
                <br />
                <label>BMI: </label>
            </li>

            <li>
                <br />
                <label>Risk</label>
            </li>
        </ul>
        @Html.Partial("_form-field-properties")
    </div>
    <a href="javascript:void(0);" class="help-icon-1 help-icon hide w-tip">
        <img src="@Html.SpacerImage()" alt="help" />
    </a>
    @Html.Partial("_form-field-settings-template")
</script>