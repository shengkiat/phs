@model PHS.DB.ViewModels.Forms.TemplateFieldViewModel
@using PHS.Business.Extensions

<label style="width: 30%; word-wrap: break-word" data-sub-channel="sub-label-@Model.DomId" class="label editable">@Model.Label</label>
<span class="required @Model.IsRequired.OutputIfTrue("visible","hidden")">*</span>
<div class="input">
    <input id="SubmitFields[@Model.DomId].Email" name="SubmitFields[@Model.DomId].Email" type="text" value="@Html.GetTempFormValue(Model)" maxlength="@Model.MaxCharacters" title="eg. someone@example.com" class="title watermarked" />
    @if (Model.IsEditMode())
    {
        @Html.Partial("_form-field-properties-partial", Model)
    }

    @if (!Model.Errors.IsNullOrEmpty())
    {
        <span class="field-validation-error">@Model.Errors</span>
    }
</div>
<a href="javascript:void(0);" title="@Model.HelpText" class="help-icon-1 help-icon @Model.HelpText.OutputIfIs("", "hide") w-tip">
    <img src="@Html.SpacerImage()" alt="help" />
</a>

@if (Model.IsEditMode())
{
    @Html.Partial("_form-field-settings-template")
}
