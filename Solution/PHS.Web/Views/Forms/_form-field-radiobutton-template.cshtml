@using PHS.FormBuilder.Helpers
@using PHS.Common
@using PHS.FormBuilder.Extensions

<script id="form-field-radiobutton-template" type="text/x-jquery-tmpl">
    <p style="width: 90%; word-wrap: break-word; text-align: left;"
           data-sub-channel="sub-label-${id}"
           class="label editable">Click to edit</p>

    <span class="required hidden">*</span>

    <div class="input" style="width: 70%; margin-left: 1cm;">
        <ul class="option-list vertical-list">
            <li>
                <input name="SubmitFields[${id}].RadioButton" type="radio" value="Option 1" name="radiogroup-${id}" /><label>Option 1</label>
            </li>
            <li>
                <input name="SubmitFields[${id}].RadioButton" type="radio" value="Option 1" name="radiogroup-${id}" /><label>Option 2</label>
            </li>
        </ul>
        <ul class="othersoption-list vertical-list">
            <li>
                <input name="SubmitFields[${id}].RadioButton" id="SubmitFields[${id}].RadioOthersOption" type="radio" value="OthersOption" name="radiogroup-${id}" style="display:none" />
                <input name="SubmitFields[${id}].OthersOption" id="SubmitFields[${id}].OthersOption" type="text" style="display:none" placeholder="Others" />
            </li>
        </ul>
        @Html.Partial("_form-field-properties")
    </div>
    <a href="javascript:void(0);" class="help-icon-1 help-icon hide">
        <img src="@Html.SpacerImage()" alt="help" />
    </a>
    @Html.Partial("_form-field-settings-template")
</script>